<%-include ("../partials/header")  -%>


<h1 style="text-align: center">Edit Comment </h1>
<div style="width:30%; margin:25px auto">
    <form action="/stores/<%= store_id %>/comments/<%= comment._id  %>?_method=PUT " method="POST">
        <div class="form-group">
            <!-- when submitted form text and author will be nested inside req.body.comment  -->
            <!-- looks like:  {text: 'some text', author:'some author'} -->
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text  %> ">
        </div>


        <div class="form-group">
            <button class="class= btn btn-lg btn-primary btn-block">Submit!</button>
        </div>

    </form>
    <a href="/stores">Go Back to Stores!</a>
</div>




<%-include ("../partials/footer")  -%>