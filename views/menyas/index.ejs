<%-include ("../partials/header")  -%>
<!-- updated syntax in ejs v3.0.1 -->

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hankpicked Menyas from all over the world</p>
        <p>
            <a class="btn btn-primary btn-large" href="/menyas/new">Add New Menya</a>
        </p>

    </div>
</header>

<div class="row" style="display:flex; flex-wrap: wrap">


    <% menyas.forEach((menya)=>{ %>
    <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
            <img src="<%= menya.image %>" style="height:180px;width:100%;display: block">
            <div class="caption">
                <h4><%= menya.name %> </h4>
            </div>
            <p>
                <a href="/menyas/<%= menya._id %>" class="btn btn-primary">More Info</a>
                <!-- mongoDB ID -->
            </p>
        </div>

    </div>
    <%});  %>
</div>


<%-include ("../partials/footer") -%>
<!-- updated syntax in ejs v3.0.1 -->